{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6", "dom"],
    "declaration": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
